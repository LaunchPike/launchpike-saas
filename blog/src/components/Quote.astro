---
import CommentsMarqueeFM from "./comments-marquee/CommentsMarquee.jsx";
import { comments } from "../data/site.ts";
---

<section class="flex flex-col gap-5">
  <span class="font-extrabold text-6xl w-full text-center block">
    Join the community
  </span>

  <div class="flex flex-row gap-2.5 text-[#3B82F6] justify-center">
    <a
      class="bg-white border border-[#3B82F6] rounded-xl py-2.5 px-5 cursor-pointer
             transition-colors transition-transform duration-200
             hover:bg-[#3B82F6] hover:text-white hover:-translate-y-0.5 hover:shadow-md
             active:translate-y-0
             focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#3B82F6]/60"
      href="https://t.me/launchpike_chat"
      target="_blank"
    >Telegram</a>

    <a
      class="bg-white border border-[#3B82F6] rounded-xl py-2.5 px-5 cursor-pointer
             transition-colors transition-transform duration-200
             hover:bg-[#3B82F6] hover:text-white hover:-translate-y-0.5 hover:shadow-md
             active:translate-y-0
             focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#3B82F6]/60"
      href="https://discord.gg/9QpmqpXE"
      target="_blank"
    >Discord</a>

    <a
      class="bg-white border border-[#3B82F6] rounded-xl py-2.5 px-5 cursor-pointer
             transition-colors transition-transform duration-200
             hover:bg-[#3B82F6] hover:text-white hover:-translate-y-0.5 hover:shadow-md
             active:translate-y-0
             focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#3B82F6]/60"
      href="https://x.com/LaunchPike"
      target="_blank"
    >X / Twitter</a>
  </div>

  <CommentsMarqueeFM client:load rows={comments} speeds={[22, 26, 40, 18]} />
</section>
